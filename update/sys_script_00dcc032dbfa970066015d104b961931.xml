        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	current.update();
	var arr1 = [];
	var arr2 = [];
	var gr = new GlideRecord('x_cria_livestock_t_batchfill_saleyard_release');
	gr.addQuery('parent', current.sys_id);
	gr.orderBy('official_identification');
	gr.query();
	while(gr.next()){
		arr2.push(gr.alternate_identification.getDisplayValue());
		arr1.push(gr.official_identification.getDisplayValue());
	}
	if(arr1.length > -1){	
		if(arr2.length == 0){
			current.official_ids = arr1.toString();
			current.update();
		}
		else{
			current.official_ids = (arr1.toString() + ", " + arr2.toString());
			current.update();
		}
	}
})(current, previous);]]></script>
