        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	var updval = "";
	var gr = new GlideRecord('x_cria_livestock_t_brucellosis_vaccination_record');
	gr.addQuery('sys_id', current.parent);
	gr.query();
	if(gr.next()){
		var idstring = gr.getValue('official_ids').toString();
		var array = idstring.split(", ");
		var i = 0;
		for(i=0;i<array.length;i++){
			if(array[i] == previous.id){
				array[i] = current.id;
			}
		}
		for(i=0;i<array.length;i++){
			if(updval == ""){
				updval = array[i];
			}else{
				updval = updval+", "+array[i];
			}
		}
		gr.setValue('official_ids', updval);
		gr.update();
	}
})(current, previous);]]></script>
